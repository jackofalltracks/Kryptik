<div class="row-fluid">

	<div class="span3">
		<p> <%= image_tag @user.gravatar_url, alt: "#{@user.email} email address" %> </p>

		<% if @user.has_role? :artist %>
			<%= render 'user_bands' %>
		<% else %>
			<div>
				<p class="page-header lead"> Bands I Love </p>
			</div>
		<% end %>
	
	</div>
	
	<% if @user.has_role? :artist %>
		<div class="span9">
			<h1> <%= @user.profile_name %> <span class="lead"> Artist Page </span></h1>
			<h4> <%= @user.city %>, <%= @user.state %> </h4>
		</div>
	<% else %>		
		<div class="span9">
			<h1> <%= @user.profile_name %> <span class="lead"> Fan Page </span></h1>
			<h4> <%= @user.city %>, <%= @user.state %> </h4>
	    </div>
    <% end %>

    <div class="span9">
    	<div class="page-header"> <h2>Status Updates <%= render 'new_status' %> </h2> </div>
    	<% if @user.statuses.empty? %>
		  <h3 class="well">Hmm. No status updates as of yet. </h3>
		<% else %>
	    	<div> 
				<% @user.statuses.each do |s| %>	
					<div class="media">
					  <a class="pull-left" href="#">
						<%= image_tag @user.gravatar_small, class: "media-object" %>
					  </a>
					  <div class="media-body">
					    <h4 class="media-heading"> <%= @user.profile_name %>  </h4>
					    <p> <%= s.content %> </p>
					    <span>Created <%= time_ago_in_words(s.created_at) + " ago" %>
					    	<% if s.user_id === current_user.id  %>    
							  |     <%= link_to "Edit", edit_status_path(s) %> |
							  <%= link_to "Delete", s, method: :delete, data: {confirm: "Are you sure you'd like to delete this bad boy?"} %>
							<% end %>
					    </span> 
					  </div>
					</div>
				<% end %>
			</div>
		<% end %>	
	</div>
	
</div>