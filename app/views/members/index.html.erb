<div class="row">
  <div class="span12">
    <h2>Members</h2>
  </div>
</div>

<div class="row">
  <div class="span12">
    <ul>
    <% @members.each do |member| %>
      <li><%= member.email %> - <%= link_to "Remove", band_member_path(@band, member), :method => :delete, :confirm => "Are you sure you want to remove this Band Member?" %></li>
    <% end %>
    </ul>
  </div>
</div>